{
  "name": "client-time-tracker",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "dev": "next dev",
    "dev:server": "pnpm --filter @ctt/server dev",
    "dev:all": "node scripts/dev.js",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "server:build": "pnpm --filter @ctt/server build",
    "server:start": "pnpm --filter @ctt/server start",
    "db:seed": "tsx scripts/seed.ts",
    "db:migrate-excel": "tsx scripts/migrate-excel.ts",
    "build:server": "node scripts/bundle-api-server.js",
    "build:standalone": "node scripts/package-standalone.js",
    "electron:start": "electron electron-app",
    "electron:build": "node scripts/sync-version.js && electron-builder --config electron-builder.json",
    "server:installer": "node scripts/build-server-installer.js",
    "server:installer:linux": "node scripts/build-linux-server-packages.js",
    "build:all": "pnpm run clean && pnpm run build && pnpm run build:server && pnpm run build:standalone && pnpm run electron:build && pnpm run server:installer && node scripts/copy-to-distribute.js",
    "build:linux": "pnpm run clean && pnpm run build && pnpm run build:server && pnpm run build:standalone && pnpm run electron:build && pnpm run server:installer:linux && node scripts/copy-to-distribute.js",
    "clean": "node -e \"const fs=require('fs'); ['dist-electron','dist-server','temp-server-build'].forEach(d=>{if(fs.existsSync(d)){fs.rmSync(d,{recursive:true,force:true});console.log('Cleaned: '+d)}})\""
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.469.0",
    "next": "^16.1.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwind-merge": "^2.2.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "electron-winstaller",
      "esbuild",
      "sharp",
      "unrs-resolver"
    ]
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.25.0",
    "eslint-config-next": "^16.1.1",
    "tailwindcss": "^4",
    "typescript": "^5",
    "xlsx": "^0.18.5"
  }
}
